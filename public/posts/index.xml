&lt;style&gt;
   
  .custom-container {
    display: flex;
    gap: 25px;
    align-items: flex-start;
    margin-top: 30px;
    font-family: &#39;Inter&#39;, sans-serif;
  }

   
  .sidebar-menu {
    flex: 1;
    min-width: 180px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    position: sticky;
    top: 20px;
  }

  .tab-btn {
    padding: 15px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: #1e293b;  
    color: #94a3b8;
    font-size: 1rem;
    cursor: pointer;
    font-weight: 600;
    text-align: left;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .tab-btn:hover {
    background: #334155;
    color: #fff;
  }

   
  .tab-btn.active#btn-java {
    border-color: #f89820;
    color: #f89820;
    background: rgba(248, 152, 32, 0.1);
  }

  .tab-btn.active#btn-js {
    border-color: #00abff;
    color: #00abff;
    background: rgba(0, 171, 255, 0.1);
  }

   
  .content-list {
    flex: 3;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .p-item {
    display: block;
    padding: 18px 25px;
    background: #1e293b;
    border-radius: 12px;
    text-decoration: none;
    color: #e2e8f0;
    margin-bottom: 12px;
    border-left: 4px solid transparent;
    transition: all 0.2s ease;
  }

   
  .java-border { border-left-color: #f89820; }
  .js-border { border-left-color: #00abff; }

  .p-item:hover {
    background: #334155;
    transform: translateX(8px);
    color: #fff;
  }

   
  @media (max-width: 768px) {
    .custom-container { flex-direction: column; }
    .sidebar-menu { width: 100%; position: static; flex-direction: row; }
    .tab-btn { flex: 1; justify-content: center; }
  }
&lt;/style&gt;

&lt;script&gt;
  function showPosts(type) {
    const javaList = document.getElementById(&#39;java-list&#39;);
    const jsList = document.getElementById(&#39;js-list&#39;);
    const btnJava = document.getElementById(&#39;btn-java&#39;);
    const btnJs = document.getElementById(&#39;btn-js&#39;);

    if(type === &#39;java&#39;) {
      javaList.style.display = &#39;block&#39;;
      jsList.style.display = &#39;none&#39;;
      btnJava.classList.add(&#39;active&#39;);
      btnJs.classList.remove(&#39;active&#39;);
    } else {
      javaList.style.display = &#39;none&#39;;
      jsList.style.display = &#39;block&#39;;
      btnJava.classList.remove(&#39;active&#39;);
      btnJs.classList.add(&#39;active&#39;);
    }
  }

  
  window.onload = function() {
    const urlParams = new URLSearchParams(window.location.search);
    const tab = urlParams.get(&#39;tab&#39;); 

    if (tab === &#39;js&#39;) {
      showPosts(&#39;js&#39;);
    } else {
      showPosts(&#39;java&#39;); 
    }
  };
&lt;/script&gt;</description>
